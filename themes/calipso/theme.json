{
  "name": "calipso",
  "description": "Theme used on Calip.so",
  "version": "0.1.1",
  "author": "Clifton Cunningham <clifton.cunningham@gmail.com> (cliftoncunningham.co.uk)",
  "layouts": {
    "default": {
      "layout": {
        "template": "default.html",
        "sections": {
          "scripts": {"template": "scripts.html"},
          "admin": {"menu": "admin", "template": "adminMenu.html"},
          "primary": {"menu": "primary", "template": "primaryMenu.html"},
          "header": {"template": "header.html"},
          "messages": {"template": "messages.html"},
          "body": {"template": "body.html"},
          "right": {"template": "right.html"},
          "footer": {"template": "footer.html"}
        },
        "modules":{
          "user":{
            "login":"modules/user/login.html"
          }
        }
      }
    },
    "home": {
      "layout": {
        "copyFrom":"default",
        "sections": {
          "body": {"template": "body.html"}
        }
      }
    },
    "blogLanding": {
      "layout": {
        "copyFrom":"default",
        "sections": {
          "body": {"template": "body.html"}
        }
      }
    },
    "githubLanding": {
      "layout": {
        "copyFrom":"default",
        "sections": {
          "body": {"template": "body.html"}
        }
      }
    },
    "preview": {
      "layout": {
        "template": "preview.html",
        "sections": {
          "scripts": {"template": "scripts.html"},
          "body": {"template": "body.html"}
        }
      }
    }
  }
}